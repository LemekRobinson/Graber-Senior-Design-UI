<LoginScreen>
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'Images/black.jpg'
	FloatLayout:
		GridLayout:
			cols: 1
			rows: 3
			padding: 10
			spacing: 10
			GridLayout:
				cols: 2
				rows: 1
				Label:
					id: user
					text: "User Name"
				TextInput:
					id: login
					
			GridLayout:
				cols: 2
				rows: 1
				Label:
					text: "Password"
				TextInput:
					id: passw
					multiline: False
					password: True
					
			FloatLayout:
				Button:
					text: "Log In"
					on_press: root.verify_credentials()
					size_hint: .50,.50
					pos_hint: {'center_x': .5, 'center_y': .5}


<MainScreen>
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'Images/black.jpg'

    StackLayout:
        padding: 10
        BoxLayout:
            id: cambox
		    orientation: "vertical"
		    size_hint: .5,.5

			BoxLayout:
			    size_hint: 1,.8
			    KivyCamera:
			        id: qrcam
			        allow_stretch: True
			        keep_ratio: True

            BoxLayout:
                size_hint: 1,.2
                orientation: "horizontal"
                id: cambuttonbox
                Button:
			        id: connection
                    size_hint: 0.8,1
                    text: "Connect"
                    on_press: root.dostart()

                Button:
                    id: fullscreen
                    size_hint: 0.2,1
                    text: "Fullscreen"
                    on_press: root.changesize()

        BoxLayout:
            orientation: "vertical"
            size_hint: .40,.5
            BoxLayout:
                orientation: "horizontal"
                id: guage1
    BoxLayout:
        size_hint: 1,.5
        BoxLayout:
            id: graph



<Options>
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'Images/black.jpg'

    BoxLayout:
        size_hint: .5,1
        orientation: "vertical"

<Graphs>
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'Images/black.jpg'

    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            id: graph
        BoxLayout:
            size_hint: 1,.1
            orientations: "horizontal"
            Button:
                text: 'press me pls'
                on_press: root.thing()

